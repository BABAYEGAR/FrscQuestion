@model FrscQuestion.Models.Entities.AppCredential
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "App Credential";
    ViewBag.PageTitle = "Manage App Credential";
}

<div class="col-md-12 m-t-50">
    @using (Html.BeginForm("AppCredential", "Page", FormMethod.Post, new {@class = "", enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.AppCredentialId)
        @Html.HiddenFor(m => m.DateCreated)
        @Html.HiddenFor(m => m.CreatedBy)
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.PaystackPublicKey, new {@class = "control-label"})<span class="required">*</span>
            @Html.EditorFor(model => model.PaystackPublicKey, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the flutterwave public key"}})
            @Html.ValidationMessageFor(model => model.PaystackPublicKey, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.PaystackSecretKey, new {@class = "control-label"})<span class="required">*</span>
            @Html.TextBoxFor(model => model.PaystackSecretKey, new {@class = "form-control", id = "startDate", placeholder = "Please enter the flutterwave secret key"})
            @Html.ValidationMessageFor(model => model.PaystackSecretKey, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.CustomerId, new {@class = "control-label"})<span class="required">*</span>
            @Html.TextBoxFor(model => model.CustomerId, new {@class = "form-control", placeholder = "Please enter the customer ID"})
            @Html.ValidationMessageFor(model => model.CustomerId, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.EventPlannerId, new {@class = "control-label"})<span class="required">*</span>
            @Html.TextBoxFor(model => model.EventPlannerId, new {@class = "form-control", placeholder = "Please enter the event planner ID"})
            @Html.ValidationMessageFor(model => model.EventPlannerId, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.DefaultVendorPaymentPercentage, new {@class = "control-label"})<span class="required">*</span>
            @Html.TextBoxFor(model => model.DefaultVendorPaymentPercentage, new {@class = "form-control", placeholder = "Please enter the default charge"})
            @Html.ValidationMessageFor(model => model.DefaultVendorPaymentPercentage, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-purple waves-effect waves-light">Submit</button>
        </div>
    }
</div>