@model FrscQuestion.Models.Entities.AppUser
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "User Management";
    ViewBag.PageTitle = "Edit User";
}

@section BreadCrumb{
    <li>
        <a href="@Url.Action("Index", "AppUser")">Users</a>
    </li>
    <li>
        <a href="@Url.Action("Create", "AppUser")">Add User</a>
    </li>
}

<div class="col-md-12 m-t-50">
    @using (Html.BeginForm("Edit", "AppUser", FormMethod.Post, new {@class = "", enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.AppUserId)
        @Html.HiddenFor(m => m.CreatedBy)
        @Html.HiddenFor(m => m.DateCreated)
        @Html.HiddenFor(m => m.Password)
        @Html.HiddenFor(m => m.ConfirmPassword)
        @Html.HiddenFor(m => m.HasSocialMediaLogin)
        @Html.HiddenFor(m => m.AccountType)
        @Html.HiddenFor(m => m.Status)
        @Html.HiddenFor(m => m.ProfilePicture)
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new {@class = "control-label"})<span class="required">*</span>
            @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the staff name"}})
            @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, new {@class = "control-label"})<span class="required">*</span>
            @Html.TextAreaFor(model => model.Address, new {@class = "form-control", placeholder = "Please enter the staff address"})
            @Html.ValidationMessageFor(model => model.Address, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Email, new {@class = "control-label"})<span class="required">*</span>
            @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the staff email"}})
            @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Mobile, new {@class = "control-label"})<span class="required">*</span>
            @Html.EditorFor(model => model.Mobile, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the staff phone number"}})
            @Html.ValidationMessageFor(model => model.Mobile, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.ProfilePicture, new {@class = "control-label"})
            @Html.EditorFor(model => model.ProfilePicture, new {htmlAttributes = new {@class = "form-control", type = "file"}})
            @Html.ValidationMessageFor(model => model.ProfilePicture, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.RoleId, new {@class = "control-label"})<span class="required">*</span>
            @Html.DropDownListFor(model => model.RoleId, null, "Select user Role", new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.RoleId, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-purple waves-effect waves-light">Submit</button>
        </div>
    }
</div>