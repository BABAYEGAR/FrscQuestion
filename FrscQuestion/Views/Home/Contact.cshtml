@model FrscQuestion.Models.Entities.Contact
@{
    ViewBag.Title = "Contact Us";
    Layout = "_Layout";
}
<div class="tp-page-head" style="background: url(/images/banner10.jpg); background-size: cover;">
    <!-- page header -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1>Contact us</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.page header -->
<div class="tp-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <ol class="breadcrumb">
                    <li>
                        <a href="@Url.Action("Index")">Home</a>
                    </li>
                    <li class="active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="well-box">
                    <p>Please fill out the form below and we will get back to you as soon as possible.</p>
                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new {@class = "form-horizontal", enctype = "multipart/form-data", role = "form"}))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="form-group">
                            <div class="col-xs-12">
                                @Html.EditorFor(model => model.Name, null, new {htmlAttributes = new {@class = "form-control", placeholder = "Personal/Business Name"}})
                                @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                @Html.EditorFor(model => model.Email, null, new {htmlAttributes = new {@class = "form-control input-md", placeholder = "Email Address"}})
                                @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                @Html.EditorFor(model => model.Mobile, null, new {htmlAttributes = new {@class = "form-control input-md", placeholder = "Phone Number"}})
                                @Html.ValidationMessageFor(model => model.Mobile, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                @Html.EditorFor(model => model.Subject, null, new {htmlAttributes = new {@class = "form-control input-md", placeholder = "Subject"}})
                                @Html.ValidationMessageFor(model => model.Subject, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                @Html.TextAreaFor(model => model.Message, new {@class = "form-control", placeholder = "Message"})
                                @Html.ValidationMessageFor(model => model.Message, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" id="btnlogin" style="background: #f48f00; color: white; font-size: 16px" class="btn btn-block btn-lg">Sign Up</button>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6 contact-info">
                <div class="well-box">
                    <ul class="listnone">
                        <li class="address">
                            <h2><i class="fa fa-map-marker"></i>Location</h2>
                            <p>Road 4, House 2, Godab Estate, Life Camp 900108.FCT.Abuja</p>
                        </li>
                        <li class="email">
                            <h2><i class="fa fa-envelope"></i>E-Mail</h2>
                            <p>info@afriplugz.com</p>
                        </li>
                        <li class="call">
                            <h2><i class="fa fa-phone"></i>Contact</h2>
                            <p>+234-811-4675-635</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="map" id="googleMap"></div>